server {

	root /var/www/html/loqui_chat;
	index index.html;
	server_name loqui-chat.xyz;

	location / {
		try_files $uri $uri/index.html = 404;
	}

    	listen 443 ssl; # managed by Certbot
    	ssl_certificate /etc/letsencrypt/live/loqui-chat.xyz/fullchain.pem; # managed by Certbot
    	ssl_certificate_key /etc/letsencrypt/live/loqui-chat.xyz/privkey.pem; # managed by Certbot

	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {

	listen 80;
	listen [::]:80;
	server_name loqui-chat.xyz;
	return 404;
}

server {
    if ($host = loqui-chat.xyz) {
        return 301 https://$host$request_uri;
    }


    server_name loqui-chat.xyz;
    listen 80;
    return 404; # managed by Certbot
}